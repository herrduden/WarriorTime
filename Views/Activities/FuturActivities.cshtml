@{
    Layout = "_InternLayout";
}
<div class="main-panel">
    <div class="content-wrapper">
<div class="row flex-grow">
    <div class="col-12 grid-margin stretch-card">
        <div class="card card-rounded">
            <div class="card-body">
                <div class="d-sm-flex justify-content-between align-items-start">
                    <div>
                        <h4 class="card-title card-title-dash">Pending Requests</h4>
                        <p class="card-subtitle card-subtitle-dash">You have 50+ new requests</p>
                    </div>
                    <div>
                        <button class="btn btn-primary btn-lg text-white mb-0 me-0" type="button"><i class="mdi mdi-account-plus"></i>Add new member</button>
                    </div>
                </div>
                <div class="table-responsive  mt-1">
                    @if (TempData["Enroll"] != null && (int)TempData["Enroll"] == 1)
                            {
                                <div class="alert alert-success" role="alert">
                                    Enrollment successfull o(￣┰￣*)ゞ
                                </div>
                            }
                            @if (TempData["Enroll"] != null && (int)TempData["Enroll"] == 0)
                            {
                                <div class="alert alert-danger" role="alert">
                                    Something went wrong , please try again (#｀-_ゝ-)
                                </div>
                            }
                            @if (TempData["Cancel"] != null && (int)TempData["Cancel"] == 1)
                            {
                                <div class="alert alert-success" role="alert">
                                    Cancel successfully (oﾟvﾟ)ノ
                                </div>
                            }
                            @if (TempData["Cancel"] != null && (int)TempData["Cancel"] == 0)
                            {
                                <div class="alert alert-danger" role="alert">
                                    Something went wrong , please try again (#｀-_ゝ-)
                                </div>
                            }
                    <table class="table select-table">
                        <thead>
                            <tr>
                                <th>
                                    <div class="form-check form-check-flat mt-0">
                                        <label class="form-check-label">
                                            <input type="checkbox" class="form-check-input" aria-checked="false"><i class="input-helper"></i>
                                        </label>
                                    </div>
                                </th>
                              
                                <th>Coach</th>
                                <th>Discipline</th>
                                <th>Durée</th>
                                <th>Date</th>
                                <th>Lieu</th>
                                <th>Nom de Salle</th>
                                <th>Type de cours</th>
                                <th>Etat</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.futurActivities)
                                    {
                                        <tr>
                                            <td>
                                                <div class="form-check form-check-flat mt-0">
                                                    <label class="form-check-label">
                                                        <input type="checkbox" class="form-check-input" aria-checked="false"><i class="input-helper"></i>
                                                    </label>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="d-flex ">
                                                   
                                                    <div>
                                                        <h6>@item.nomCoach @item.prenomCoach</h6>
                                                        <p>Head admin</p>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <h6>@item.libelleDiscipline</h6>
                                                <p>company type</p>
                                            </td>
                                            <td>
                                                <h6>@item.dureeCours</h6>
                                            </td>
                                            <td>
                                                <h6>@item.dateCours</h6>
                                            </td>
                                            <td>
                                                <h6>@item.Lieu</h6>
                                            </td>
                                            <td>
                                                <h6>@item.nomSalle</h6>
                                            </td>
                                             <td>
                                                <h6>@item.nomTypeCours</h6>
                                            </td>
                                            @if (@item.etatDuCours.ToLower().Equals("maintenu"))
                                            {
                                                <td><div class="badge badge-opacity-success">@item.etatDuCours</div></td>
                                            }
                                            else if (@item.etatDuCours.ToLower().Equals("reporte"))
                                            {
                                                <td><div class="badge badge-opacity-warning">@item.etatDuCours</div></td>
                                            }else
                                            {
                                                <td><div class="badge badge-opacity-danger">@item.etatDuCours</div></td>
                                            }
                                            <td>
                                                @if (!@item.etatDuCours.ToLower().Equals("annule"))
                                                {
                                                    <div class="dropdown">
                                                        <button class="btn btn-dark dropdown-toggle" type="button" id="dropdownMenuIconButton1" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                            <i class="ti-settings"></i>
                                                        </button>
                                                        <div class="dropdown-menu" aria-labelledby="dropdownMenuIconButton1">

                                                            @if (item.etatInscription == false)
                                                            {

                                                                <a class="dropdown-item" asp-route-id="@item.idCours" asp-action="Enroll" asp-controller="Activities">Enroll again</a>
                                                            }
                                                            else
                                                            {
                                                                <a class="dropdown-item" asp-route-id="@item.idCours" asp-action="Cancel" asp-controller="Activities">Cancel</a>
                                                            }

                                                        </div>
                                                    </div>
                                                }
                                              
                                            </td>
                                        </tr>
                                    }
                        
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
    </div>

</div>